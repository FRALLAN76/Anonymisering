{
  "version": "1.1",
  "updated": "2025-12-08",
  "description": "Maskinläsbara regler för menprövning enligt OSL - kompletterad med officiella källor",

  "principles": {
    "default_action": "MASK",
    "reversed_burden_of_proof": true,
    "time_limit_years": 70,
    "child_enhanced_protection": true,
    "violence_victim_protection": true,
    "legal_text": "Sekretess gäller inom socialtjänsten för uppgift om en enskilds personliga förhållanden, om det inte står klart att uppgiften kan röjas utan att den enskilde eller någon närstående till denne lider men."
  },

  "sensitivity_levels": {
    "CRITICAL": {
      "code": 4,
      "action": "MASK_COMPLETE",
      "description": "Måste alltid maskeras"
    },
    "HIGH": {
      "code": 3,
      "action": "MASK_COMPLETE",
      "description": "Ska maskeras"
    },
    "MEDIUM": {
      "code": 2,
      "action": "MASK_PARTIAL",
      "description": "Identifierande delar maskeras"
    },
    "LOW": {
      "code": 1,
      "action": "RELEASE",
      "description": "Kan vanligtvis lämnas ut"
    }
  },

