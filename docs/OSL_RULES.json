  "decision_rules": [
    {
      "id": "R001",
      "condition": "entity_type == 'SSN'",
      "action": "MASK",
      "level": "CRITICAL",
      "legal_basis": "OSL 26:1",
      "motivation": "Personnummer är alltid identifierande"
    },
    {
      "id": "R002",
      "condition": "person_role == 'REPORTER' AND is_private_person",
      "action": "MASK",
      "level": "CRITICAL",
      "legal_basis": "OSL 26:1",
      "motivation": "Privatpersons identitet som anmälare skyddas"
    },
    {
      "id": "R003",
      "condition": "person_role == 'THIRD_PARTY'",
      "action": "MASK",
      "level": "HIGH",
      "legal_basis": "OSL 26:1, OSL 10:3",
      "motivation": "Tredje mans uppgifter skyddas"
    },
    {
      "id": "R004",
      "condition": "category IN ('HEALTH', 'MENTAL_HEALTH', 'ADDICTION', 'SEXUAL')",
      "action": "MASK",
      "level": "CRITICAL",
      "legal_basis": "OSL 26:1",
      "motivation": "Känslig kategori enligt socialtjänstsekretess"
    },
    {
      "id": "R005",
      "condition": "involves_child AND age < 18",
      "action": "ENHANCED_PROTECTION",
      "level": "HIGH",
      "legal_basis": "OSL 26:1",
      "motivation": "Förstärkt skydd för barn"
    },
    {
      "id": "R006",
      "condition": "person_role == 'REQUESTER' AND requester_is_subject",
      "action": "RELEASE",
      "level": "LOW",
      "legal_basis": "OSL 26:6",
      "motivation": "Partsinsyn i eget ärende"
    },
    {
      "id": "R007",
      "condition": "case_type == 'LVU' AND requester == 'guardian'",
      "action": "ASSESS",
      "level": "HIGH",
      "legal_basis": "OSL 26:1, LVU",
      "motivation": "Vårdnadshavare är part men barnets bästa kan begränsa insyn"
    },
    {
      "id": "R008",
      "condition": "reporter_type == 'authority'",
      "action": "MASK_INDIVIDUAL",
      "level": "MEDIUM",
      "legal_basis": "OSL 26:1",
      "motivation": "Myndighetsnamn kan vara OK, inte individnamn"
    },
    {
      "id": "R009",
      "condition": "category IN ('VIOLENCE', 'SEXUAL') AND involves_localization",
      "action": "MASK",
      "level": "CRITICAL",
      "legal_basis": "OSL 26:1",
      "motivation": "Uppgifter som kan leda till lokalisering av våldsutsatt"
    },
    {
      "id": "R010",
      "condition": "document_age_years >= 70",
      "action": "ASSESS",
      "level": "LOW",
      "legal_basis": "OSL 26:1",
      "motivation": "Sekretess kan ha upphört efter 70 år"
    },
    {
      "id": "R011",
      "condition": "has_consent == true",
      "action": "RELEASE",
      "level": "LOW",
      "legal_basis": "OSL 26:3",
      "motivation": "Den enskilde har samtyckt till utlämnande"
    },
    {
      "id": "R012",
      "condition": "person_role == 'PROFESSIONAL'",
      "action": "KEEP_NAME_MASK_SSN",
      "level": "MEDIUM",
      "legal_basis": "OSL 26:1",
      "motivation": "Tjänstemäns namn är offentliga, personnummer inte"
    }
  ],

